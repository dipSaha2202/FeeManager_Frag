<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtClass_singleRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewStyle.AllStudent"
        tools:text="class" />

    <TextView
        android:id="@+id/txtName_singleRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Name"
        style="@style/TextViewStyle.AllStudent"/>

    <TextView
        android:id="@+id/txtLastPaid_singleRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="month"
        style="@style/TextViewStyle.AllStudent"/>

    <TextView
        android:id="@+id/txtFee_singleRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="fee"
        style="@style/TextViewStyle.AllStudent"/>

    <TextView
        android:id="@+id/txtPhone_singleRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="phone"
        style="@style/TextViewStyle.AllStudent"/>
</LinearLayout>